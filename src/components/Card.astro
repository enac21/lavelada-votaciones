---
interface Props {
	title: string;
	url_1:string;
	url_2:string;
}

const { title, url_1, url_2 } = Astro.props;
---

<section class="link-card">
	<h2 class="col-span-full text-center py-6">
		{title}
	</h2>
	<ul class="flex flex-auto">
		<li class="w-full sm:w-1/2 xl:w-1/2">
			<a href="#">
				<img 
					class="w-full h-full rounded transition duration-300 ease-in-out hover:bg-green-600" 
					src={url_1} 
					alt="Boxeador 1"
				>
			</a>
		</li>
		<!--<li class="absolute left-1/2 xl:left-auto transform -translate-x-1/2 sm:static">
			<img 
					src="vs.png"
					alt="vs"
				>
		</li>-->
		<li class="w-full sm:w-1/2 xl:w-1/2">
			<a href="#">
				<img 
					class="w-full h-full rounded transition duration-300 ease-in-out hover:bg-green-600" 
					src={url_2} 
					alt="Boxeador 2"
				>
			</a>
		</li>
	</ul>
</section>
<style>
	.link-card {
		padding: 1px;
		background-color: #23262d;
		border-radius: 7px;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		opacity: 0.90;
	}
	h2 {
		font-size: 1.25rem;
		text-align: center;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
</style>
