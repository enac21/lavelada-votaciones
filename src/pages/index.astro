---
import Layout from '@/layouts/Layout.astro';

import Vote from '@/sections/Vote.astro';
import Hero from '@/sections/Hero.astro';
import Footer from '@/sections/Footer.astro';
import Countdown from '@/sections/Countdown.astro';
import Auth from '@/sections/Auth.astro';

import { getSession } from 'auth-astro/server';
const session = await getSession(Astro.request);
---

<Layout title="La Velada IV - Apuestas">
	<Hero/>
	<main class="animate-fade-in animate-duration-1000">
		<Countdown/>
		<Auth/>
		{ 	session && (
				<Vote/>
			)
		}
	</main>
	<Footer>
</Layout>
